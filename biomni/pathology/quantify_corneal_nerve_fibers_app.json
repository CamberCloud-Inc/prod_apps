{
  "name": "quantify_corneal_nerve_fibers",
  "description": "Quantify immunofluorescence-labeled corneal nerve fibers.",
  "icon": "üëÅÔ∏è",
  "container": {
    "image": "python:3.9-slim",
    "setup_commands": [
      "git clone --depth 1 https://github.com/snap-stanford/Biomni.git /tmp/biomni && cd /tmp/biomni && pip install -e . && rm -rf .git"
    ]
  },
  "inputs": [
    {
      "name": "image_path",
      "description": "Path to immunofluorescence image of corneal nerves",
      "type": "string",
      "required": true
    },
    {
      "name": "marker_type",
      "description": "Type of immunofluorescence marker used",
      "type": "string",
      "required": true
    },
    {
      "name": "output_dir",
      "description": "Directory for saving output files (default: ./output)",
      "type": "string",
      "required": false,
      "default": "./output"
    },
    {
      "name": "threshold_method",
      "description": "Method for thresholding (default: otsu)",
      "type": "string",
      "required": false,
      "default": "otsu"
    }
  ],
  "output": {
    "type": "string",
    "description": "Research log summarizing analysis steps"
  }
}
