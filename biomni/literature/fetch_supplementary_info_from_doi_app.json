{
  "name": "fetch_supplementary_info_from_doi",
  "description": "Fetches supplementary information for a research paper using its DOI. Downloads supplementary files and returns a research log of the process.",
  "version": "1.0.0",
  "author": "Biomni Literature Tools",
  "license": "MIT",
  "input": {
    "type": "object",
    "properties": {
      "doi": {
        "type": "string",
        "description": "The paper DOI (e.g., '10.1000/xyz123')"
      },
      "output_dir": {
        "type": "string",
        "description": "Directory to save supplementary files",
        "default": "supplementary_info"
      }
    },
    "required": ["doi", "output_dir"]
  },
  "output": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether the operation succeeded"
      },
      "result": {
        "type": "string",
        "description": "Research log containing process details and downloaded file paths"
      },
      "error": {
        "type": "string",
        "description": "Error message if operation failed"
      }
    }
  },
  "execution": {
    "command": "python3",
    "args": [
      "fetch_supplementary_info_from_doi.py",
      "{{doi}}",
      "{{output_dir}}"
    ]
  }
}
