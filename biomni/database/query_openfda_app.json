{
  "name": "query_openfda",
  "title": "Query Openfda",
  "description": "Query the OpenFDA API using natural language or a direct endpoint.\n\n    Parameters\n    ----------\n    prompt (str, optional): Natural language query about drugs, adverse events, recalls, etc.\n    endp",
  "category": "Biomni Database Tools",
  "inputs": [
    {
      "name": "prompt",
      "type": "string",
      "required": false,
      "description": "Parameter: prompt"
    },
    {
      "name": "endpoint",
      "type": "string",
      "required": false,
      "description": "Parameter: endpoint"
    },
    {
      "name": "max_results",
      "type": "integer",
      "required": false,
      "description": "Parameter: max_results"
    },
    {
      "name": "verbose",
      "type": "boolean",
      "required": false,
      "description": "Parameter: verbose"
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "object",
      "description": "Query results"
    }
  ],
  "command": {
    "type": "python",
    "script": "query_openfda.py",
    "args": [
      "--prompt",
      "${prompt}",
      "--endpoint",
      "${endpoint}",
      "--max_results",
      "${max_results}",
      "--verbose",
      "${verbose}"
    ]
  }
}