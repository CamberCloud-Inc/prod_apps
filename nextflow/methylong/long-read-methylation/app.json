{
  "name": "methylong-long-read-methylation",
  "title": "Methyl Long",
  "description": " Long-read Methylation",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/methylong --input ${input} --outdir ${outdir} -r  PacBio and Nanopore methylation:1.0.0 ",
  "imageUrl": "https://raw.githubusercontent.com/nf-core/methylong/master/docs/images/nf-core-methylong_logo_light.png",
  "content": "<h2><strong>Methyl Long</strong></h2><p> Long-read Methylation</p>",
  "spec": [
    {"type": "Stash File", "label": "Input", "name": "input", "required": true, "restrictions": {"allow_files": true, "allowed_file_types": [".csv", ".tsv"]}},
    {"type": "Stash File", "label": "Output", "name": "outdir", "defaultValue": "./methylong-results", "required": true, "restrictions": {"allow_files": false, "allow_folders": true}}
  ],
  "jobConfig": [{"type": "Select", "label": "Resources", "name": "system_size", "options": [{"label": "LARGE", "value": "large", "mapValue": {"nodeSize": "LARGE", "numNodes": 1, "withGpu": false}}], "defaultValue": "large"}],
  "tags": [{"name": "methylong", "type": "task"}]
}
