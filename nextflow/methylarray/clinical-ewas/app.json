{
  "name": "methylarray-clinical-ewas",
  "title": "Methylation Array",
  "description": " Clinical EWAS",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/methylarray --input ${input} --outdir ${outdir} -r  450K and EPIC array analysis:1.0.0 ",
