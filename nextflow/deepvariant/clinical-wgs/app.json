{
  "name": "deepvariant-clinical-wgs",
  "title": "DeepVariant: Deep Learning Variant Calling",
  "description": "Deep learning-based pipeline for highly accurate genomic variant identification from whole genome and exome sequencing data. Uses Google's DeepVariant for superior accuracy.",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/deepvariant --input ${input} --outdir ${outdir} -r 1.5.0 ",
  "imageUrl": "https://raw.githubusercontent.com/nf-core/deepvariant/master/docs/images/nf-core-deepvariant_logo_light.png",
  "content": "<h2><strong>DeepVariant</strong></h2><p> Clinical WGS Variant Calling</p>",
  "spec": [
    {
      "type": "Stash File",
      "label": "Input",
      "name": "input",
      "required": true,
      "restrictions": {
        "allow_files": true,
        "allowed_file_types": [
          ".csv",
          ".tsv"
        ]
      }
    },
    {
      "type": "Stash File",
      "label": "Output",
      "name": "outdir",
      "defaultValue": "./deepvariant-results",
      "required": true,
      "restrictions": {
        "allow_files": false,
        "allow_folders": true
      }
    }
  ],
  "jobConfig": [
    {
      "type": "Select",
      "label": "Resources",
      "name": "system_size",
      "options": [
        {
          "label": "LARGE",
          "value": "large",
          "mapValue": {
            "nodeSize": "LARGE",
            "numNodes": 1,
            "withGpu": false
          }
        }
      ],
      "defaultValue": "large"
    }
  ],
  "tags": [
    {
      "name": "deepvariant",
      "type": "task"
    }
  ]
}
