{
  "name": "mitodetect-mitochondrial-variants",
  "title": "Mito Detect",
  "description": " Mitochondrial Variants",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/mitodetect --input ${input} --outdir ${outdir} -r  mtDNA variant detection:1.0.0 ",
  "imageUrl": "https://raw.githubusercontent.com/nf-core/mitodetect/master/docs/images/nf-core-mitodetect_logo_light.png",
  "content": "<h2><strong>Mito Detect</strong></h2><p> Mitochondrial Variants</p>",
  "spec": [
    {"type": "Stash File", "label": "Input", "name": "input", "required": true, "restrictions": {"allow_files": true, "allowed_file_types": [".csv", ".tsv"]}},
    {"type": "Stash File", "label": "Output", "name": "outdir", "defaultValue": "./mitodetect-results", "required": true, "restrictions": {"allow_files": false, "allow_folders": true}}
  ],
  "jobConfig": [{"type": "Select", "label": "Resources", "name": "system_size", "options": [{"label": "LARGE", "value": "large", "mapValue": {"nodeSize": "LARGE", "numNodes": 1, "withGpu": false}}], "defaultValue": "large"}],
  "tags": [{"name": "mitodetect", "type": "task"}]
}
