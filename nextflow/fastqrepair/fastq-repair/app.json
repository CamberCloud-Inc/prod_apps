{
  "name": "fastqrepair-fastq-repair",
  "title": "FASTQ Repair",
  "description": " File Repair",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/fastqrepair --input ${input} --outdir ${outdir} -r  Fix corrupted FASTQ files:1.0.0 ",
