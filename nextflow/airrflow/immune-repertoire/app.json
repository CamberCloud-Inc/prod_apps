{
  "name": "airrflow-bcr-tcr-repertoire",
  "title": "AIRRflow",
  "description": " BCR/TCR Immune Repertoire Profiling",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/airrflow --input ${input} --outdir ${outdir} -r Adaptive immune receptor repertoire (AIRR) analysis for B-cell/T-cell repertoire sequencing.:1.4.0 ",
  "imageUrl": "https://raw.githubusercontent.com/nf-core/airrflow/master/docs/images/nf-core-airrflow_logo_light.png",
  "content": "<h2><strong>AIRRflow</strong></h2><p> BCR/TCR Immune Repertoire Profiling</p>",
  "spec": [
    {"type": "Stash File", "label": "Input", "name": "input", "required": true, "restrictions": {"allow_files": true, "allowed_file_types": [".csv"]}},
    {"type": "Stash File", "label": "Output", "name": "outdir", "defaultValue": "./airrflow-results", "required": true, "restrictions": {"allow_files": false, "allow_folders": true}}
  ],
  "jobConfig": [{"type": "Select", "label": "Resources", "name": "system_size", "options": [{"label": "LARGE", "value": "large", "mapValue": {"nodeSize": "LARGE", "numNodes": 1, "withGpu": false}}], "defaultValue": "large"}],
  "tags": [{"name": "airrflow", "type": "task"}]
}
