{
  "name": "longraredisease-diagnostic-wgs",
  "title": "Long-read Rare Disease",
  "description": " Diagnostic WGS",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/longraredisease --input ${input} --outdir ${outdir} -r  Structural variants and repeat expansions:1.0.0 ",
