{
  "name": "demultiplex-ngs-samples",
  "title": "Demultiplex",
  "description": " NGS Sample Demultiplexing",
  "version": "1.0.0",
  "engineType": "NEXTFLOW",
  "command": "nextflow run nf-core/demultiplex --input ${input} --outdir ${outdir} -r Demultiplex Illumina BCL to FASTQ with bcl2fastq or bcl-convert.:1.5.1 ",
  "imageUrl": "https://raw.githubusercontent.com/nf-core/demultiplex/master/docs/images/nf-core-demultiplex_logo_light.png",
  "content": "<h2><strong>Demultiplex</strong></h2><p> NGS Sample Demultiplexing</p>",
  "spec": [
    {"type": "Stash File", "label": "Input", "name": "input", "required": true, "restrictions": {"allow_files": true, "allowed_file_types": [".csv"]}},
    {"type": "Stash File", "label": "Output", "name": "outdir", "defaultValue": "./demultiplex-results", "required": true, "restrictions": {"allow_files": false, "allow_folders": true}}
  ],
  "jobConfig": [{"type": "Select", "label": "Resources", "name": "system_size", "options": [{"label": "LARGE", "value": "large", "mapValue": {"nodeSize": "LARGE", "numNodes": 1, "withGpu": false}}], "defaultValue": "large"}],
  "tags": [{"name": "demultiplex", "type": "task"}]
}
