  "jobConfig": [
    {
      "type": "Select",
      "label": "# of particles",
      "name": "system_size",
      "hidden": true,
      "description": "",
      "options": [
        {
          "label": "1e2 particles",
          "value": "1e2",
          "mapValue": {
            "nodeSize": "XSMALL",
            "numNodes": 1,
            "withGpu": false
          }
        },
        {
          "label": "1e6 particles",
          "value": "1e6",
          "mapValue": {
            "nodeSize": "LARGE",
            "numNodes": 1,
            "withGpu": true
          }
        }
      ],
      "defaultValue": "1e2"
    }
  ],
  "spec": [
    {
      "type": "Select",
      "label": "Stretching Time",
      "name": "stretchingTime",
      "description": "Sets the velocity of the front and back faces of the nanotube, aiming to tear it apart",
      "defaultValue": "0",
      "hidden": false,
      "required": true,
      "disabled": false,
      "options": [
        {
          "label": "None",
          "value": "0"
        },
        {
          "label": "Weak",
          "value": "10000"
        },
        {
          "label": "Strong",
          "value": "30000"
        }
      ]
    }
  ]
}