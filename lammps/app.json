{
  "name": "lammps4",
  "title": "LAMMPS4: Carbon Nanotube",
  "description": "Ultra-Strong, Ultra-Light, Atom by Atom",
  "content": "123",
  "imageUrl": "https://docs.dev.camber.cloud/demos/30-applications/03-molecular-dynamics/lammps/sim.gif",
  "command": "rm -rf prod_apps && git clone https://github.com/CamberCloud-Inc/prod_apps.git && cd prod_apps/lammps && sh ./run_sim.sh ${stretchingTime}",
